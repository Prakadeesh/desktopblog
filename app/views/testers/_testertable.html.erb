<h1>Listing Testers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testers.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= test.desc %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', testers_path(test) %></td>
        <td><%= link_to 'Destroy', test, method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tester', testers_path %>