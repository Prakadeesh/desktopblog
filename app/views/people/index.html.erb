<p id="notice"><%= notice %></p>

<h1>Listing People</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person1| %>
      <tr>
        <td><%= person1.name %></td>
        <td><%= person1.desc %></td>
        <td><%= link_to 'Show', person1%></td>
        <td><%= link_to 'Edit', temp_people_path(person1) %></td>
        <td><%= link_to 'Destroy', person1, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

